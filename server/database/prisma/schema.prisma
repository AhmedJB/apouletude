model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  joined   DateTime @default(now())
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String   @default("")
  content      String   @default("")
  filename     String   @default("")
  physicalPath String   @default("")
  fileUrl      String   @default("")
  created      DateTime @default(now())
}

model Socials {
  id   Int    @id @default(autoincrement())
  name String
  url  String
}

model Book {
  id                Int      @id @default(autoincrement())
  title             String   @default("")
  price             Float    @default(0)
  description       String   @default("")
  ImageFilename     String   @default("")
  ImagephysicalPath String   @default("")
  ImageUrl          String   @default("")
  BookFilename      String   @default("")
  BookphysicalPath  String   @default("")
  BookUrl           String   @default("")
  created           DateTime @default(now())
}

model FormDataCoaching {
  id         String  @id @default(cuid())
  fee_string String
  email      String
  duration   Int
  forum      String
  username   String
  referal    String?
  agreement  String?
}

model FormDataConsultancy {
  id         String  @id @default(cuid())
  fee_string String
  email      String
  duration   Int
  forum      String
  username   String
  referal    String?
  agreement  String?
}

model FormDataAuthors {
  id          String  @id @default(cuid())
  fee_string  String
  email       String
  authorships Int
  website     String
  intent      String
  subject     String?
  agreement   String?
}

model FormDataCheckout {
  id      String @id @default(cuid())
  title   String
  price   Float  @default(0)
  name    String
  surname String
  email   String
  address String
  country String
  state   String
  zip     String
}
